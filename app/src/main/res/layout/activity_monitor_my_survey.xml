<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="idv.shenrunwu.instsuv.MonitorMySurvey">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:text="重新開放(10分鐘)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:onClick="reOpenSuvey"
            android:id="@+id/reOpen" />

        <TextView
        android:text=""
        android:textSize="24sp"
        android:background="#cccccc"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monitorTopic" />

        <TextView
            android:text=""
            android:background="#aaaaaa"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/monitorEndOfSurveyTime"/>

        <FrameLayout
            android:id="@+id/monitorLineLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">

                <Button
                    android:text=""
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionLine1"
                    android:layout_weight="1" />

                <TextView
                    android:text=""
                    android:gravity="right"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionSpace1"
                    android:layout_weight="30" />



            </LinearLayout>

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="30sp"
                android:id="@+id/monitorOption1" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/monitorLineLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">

                <Button
                    android:text=""
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionLine2"
                    android:layout_weight="1" />

                <TextView
                    android:text=""
                    android:gravity="right"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionSpace2"
                    android:layout_weight="30" />

            </LinearLayout>

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="30sp"
                android:id="@+id/monitorOption2" />

        </FrameLayout>



        <FrameLayout
            android:id="@+id/monitorLineLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">

                <Button
                    android:text=""
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionLine3"
                    android:layout_weight="1" />

                <TextView
                    android:text=""
                    android:gravity="right"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionSpace3"
                    android:layout_weight="30" />

            </LinearLayout>

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="30sp"
                android:id="@+id/monitorOption3" />

        </FrameLayout>



        <FrameLayout
            android:id="@+id/monitorLineLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">

                <Button
                    android:text=""
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionLine4"
                    android:layout_weight="1" />

                <TextView
                    android:text=""
                    android:gravity="right"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionSpace4"
                    android:layout_weight="30" />

            </LinearLayout>

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="30sp"
                android:id="@+id/monitorOption4" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/monitorLineLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">

                <Button
                    android:text=""
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionLine5"
                    android:layout_weight="1" />

                <TextView
                    android:text=""
                    android:gravity="right"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionSpace5"
                    android:layout_weight="30" />

            </LinearLayout>

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="30sp"
                android:id="@+id/monitorOption5" />

        </FrameLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/answerList"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/finishMonitor"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="endMonitor"
                android:text="結束" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>
