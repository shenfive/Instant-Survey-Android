<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="idv.shenrunwu.instsuv.StartActivity"
    android:orientation="vertical">


    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/startTab"
        android:background="@color/common_google_signin_btn_text_light_disabled">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#eeeeee">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/background001">




                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:id="@+id/surveyCodeET"
                            android:layout_weight="1" />

                        <Button
                            android:text="查詢代碼"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/button4"
                            android:onClick="onClickCheckSurveyCode"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:text="熱門調查"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="onClickCheckSystemSurveyCode"
                            android:id="@+id/button10"
                            android:layout_weight="1" />

                        <Button
                        android:text="我的群組"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button9"
                        android:onClick="onClickCheckMyGroup"
                        android:layout_weight="1" />

                        <Button
                            android:text="使用記錄"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/myAnswers"
                            android:onClick="onClickCheckMyAnswers"
                            android:layout_weight="1" />


                    </LinearLayout>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/surveyList" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/background001">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:text="己建立的調查"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/switchToMySurveyList"
                            android:onClick="switchToMySurveyList"
                            android:layout_weight="1" />

                        <Button
                            android:text="建立新的調查"
                            android:textSize="18sp"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:onClick="switchToNewSurveyEdit"
                            android:id="@+id/switchToNewSurveyEdit"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/createNewSurveyLayout"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="TextView"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lastID" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="調查主題"
                                android:textSize="20sp"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:id="@+id/topic"
                                android:inputType="textMultiLine"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="選項 1"
                                android:textSize="18sp"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                 />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:id="@+id/option1"
                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="選項 2"
                                android:textSize="18sp"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                 />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:id="@+id/option2"
                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/option3ct"
                            >

                            <TextView
                                android:text="選項 3"
                                android:textSize="18sp"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                 />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:id="@+id/option3"

                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/option4ct">

                            <TextView
                                android:text="選項 4"
                                android:textSize="18sp"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                 />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"

                                android:id="@+id/option4"
                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/option5ct">

                            <TextView
                                android:text="選項 5"
                                android:textSize="18sp"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:id="@+id/option5"
                                android:inputType="text" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="變更選項數量"
                                android:textSize="18sp"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView6"
                                />

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/numbersOfQspinner"
                                android:entries="@array/numbersOfQ"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="設定有效時間"
                                android:textSize="18sp"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                />
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/surveyAvailableTime"
                                android:id="@+id/surveyAvailableTime"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <CheckBox
                                android:text="匿名"
                                android:textSize="18sp"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/allowAnonymity"
                                android:layout_weight="1" />
                            <CheckBox
                                android:text="建議欄"
                                android:textSize="18sp"
                                android:layout_height="wrap_content"
                                android:layout_width="0sp"
                                android:layout_weight="1"
                                android:id="@+id/suggest"
                                android:checked="true" />

                            <Button
                                android:text="完成"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:onClick="newSurvey" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/mySurveysList"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/mySurveys" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background001">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="顯示名稱"
                            android:layout_width="0sp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:layout_weight="1.6" />

                        <TextView
                            android:text="TextView"
                            android:textSize="18sp"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:id="@+id/modifyDisplaynameTV"
                            android:layout_weight="3.6" />

                        <EditText
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Name"
                            android:visibility="gone"
                            android:gravity="left"
                            android:ems="10"
                            android:layout_weight="3.6"
                            android:id="@+id/modifyDisplayNameET" />

                        <Button
                            android:text="變更"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/modifyDisplayButton"
                            android:onClick="modifyDisplayName"
                            android:layout_weight="1.2"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text=""
                            android:layout_width="0sp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:id="@+id/dispplayEmailAndStatusTV"
                            android:layout_weight="10" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:text="發送驗證郵件"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/requestEmailVerification"
                            android:layout_weight="3.3"
                            android:onClick="requestEmailVerification" />
                        <!--<Button-->
                            <!--android:text="確認郵件認證"-->
                            <!--android:layout_width="0sp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/checkEmailVerification"-->
                            <!--android:layout_weight="3.3"-->
                            <!--android:onClick="checkEmailVerification" />-->
                        <Button
                            android:text="登出"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.3"
                            android:id="@+id/start_logout"
                            android:onClick="logout" />

                    </LinearLayout>
                    <TextView
                        android:text=" 下載位置 2016/11/22~26"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/a001"
                        android:id="@+id/imageView4"
                        android:layout_weight="3.3" />
                </LinearLayout>
            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </TabHost>


</LinearLayout>
